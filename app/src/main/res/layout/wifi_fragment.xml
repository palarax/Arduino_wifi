<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/wifi_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/wifi_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="WIFI activity"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edit_ip"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/wifi_Name"
            android:textSize="20sp"
            android:hint="IP of host" />

        <EditText
            android:id="@+id/edit_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_ip"
            android:textSize="20sp"
            android:hint="Port of host" />

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_port"
            android:textSize="20sp"
            android:hint="Message to send" />

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="SEND"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendMessage"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:hint="Reply" />

    </RelativeLayout>
</FrameLayout>

